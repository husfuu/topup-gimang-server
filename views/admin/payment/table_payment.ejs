<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No.</th>
      <th>Tipe pembayaran</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < payments.length; i++){ %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= payments[i].type %></td>
          <td>
            <% if(payments[i].status === 'Y') { %>
              <span class="badge badge-success">
                Aktif
              </span>
            <% } else { %>
              <span class="badge badge-danger">
                Tidak aktif
              </span>
            <% } %>
          </td>
          <td>
            <form action="/payments/status/<%= payments[i].id %>" method="POST" style="display: inline-block;">
              <button class="btn btn-primary btn-sm">
                <i class="fas fa-folder"></i>
                <% if(payments[i].status === 'Y') { %>
                    Matikan
                <% } else { %>
                    Hidupkan
                <% } %>
              </button>
            </form>
            <a href="/payments/edit/<%= payments[i].id %>" class="btn btn-info btn-sm">
              <i class="fas fa-pencil-alt"></i>
              Ubah
            </a>
            <form action="/payments/delete/<%= payments[i].id %>" method="POST" style="display: inline-block;"> 
              <button class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
                Hapus
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>